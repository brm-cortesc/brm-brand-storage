.loading
	animation toCircle ease-in-out normal forwards running 0.3s
	overflow hidden
	pointer-events none
	position relative
	text-indent -9999px
	
	&::before
		animation 1s cubic-bezier(0,1.17,.66,-0.43) alternate running infinite
		animation-delay 0.3s
		animation-name zoomInOut
		border 4px solid white
		circ(90%)
		content ''
		display block
		left 5%
		opacity 0
		position absolute
		top 5%
		transitionBase()