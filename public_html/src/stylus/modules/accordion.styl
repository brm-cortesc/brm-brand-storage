.card
	border-bottom 1px solid $gris[2]
	clearfix()
	margin 0 auto
	opacity 0
	transform scale(0.5)
	transition 0.3s all cubic-bezier(.8,-0.6,0.2,1.5)
	// width 74.7%
		
	&:nth-last-of-type(1)
		border-bottom-color transparent
	
	
	// clearfix()
	// transitionBase()
	
	&-body
		padding 5rem 0
		
	&-header
		background-color white
		clearfix()
		text-align center
		transitionBase()
		
		&.active
			box-shadow 0px 5px 5px 0px rgba(0,0,0,0.25)
		
		a 			
			color $gris[1]
			clearfix()
			display block
			
		article[class*="col-"]
			padding 0.5rem
			


.loaded
	.card
		opacity 1
		transform scale(1)
	
		for x in 1..30
			&:nth-of-type({x})
				transition-delay (0.3s * x)
				
@media (min-width: 770px)
	.card
		article[class*="col-"]
			padding 3rem 0.5rem 