header
	background-color #fff
	box-shadow 0px 0px 5px 0px rgba(0,0,0,0.25)
	clearfix()
	margin-bottom 2rem
	padding 2rem 0
	position relative
	text-align center
	z-index 2
	

	.logo
		display block
		
		img
			img-responsive(block)
			width: 100%
			
	.user-tools
		color $azul
		font-weight $normal
		
		a, span
			margin 0 0.5rem
			vertical-align middle

		.icon-off
			color $azul
			font-size 2rem