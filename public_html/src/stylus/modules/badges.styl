// badges.styl

.badge
	border 2px solid
	border-radius 20px
	display block
	margin 0 auto
	padding 0.3rem 1rem
	text-transform uppercase
	
	
	for estado, val in estados
		&-{estado}
			background-color val
			border-color darken(@background-color, 40%)
			color @border-color
	


.chip
	background-color $azul
	border-radius 10px
	color white
	display inline-block
	font-size 0.9rem
	padding 0.4rem 1rem