.card
	background-color: #fff
	border-radius 10px
	margin 1rem auto
	padding 1rem 2rem
	text-align center
	

	img
		display block
		height auto
		margin 0 auto
		// max-width 6rem
		position relative
		text-align center
			
		&::after
			color $azul
			content '\f127' attr(alt)
			font-family FontAwesome, prompt, sans-serif
			font-smoothing antialiased
			font-style normal
			left 0
			padding 0.5rem
			position absolute
			text-align center
			text-rendering auto
			top 50%
			transform translateY(-50%)
			width 100%
			
		&::before
			background-color $gris[0]
			content ''
			cuadrado(100%)
			display block
			left 0
			position absolute
			top 0